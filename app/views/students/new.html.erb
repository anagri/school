<%= form_for @student do |f| %>
  <div><%= f.error_messages %></div>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :classes %>
    <% Clazz.all.each do |clazz| %>
      <div>
        <%= check_box_tag "student[clazz_ids][]", clazz.id, @student.clazzes.include?(clazz) %>
        <%= clazz.name %>
      </div>
    <% end %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>